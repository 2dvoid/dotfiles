set $ws1 "1:productivity"
set $ws2 "2:university"
set $ws3 "3:neovim"
set $ws4 "4:search"
set $ws5 "5:ai"
set $ws6 "6:media"
set $ws7 "7:explore"
set $ws8 "8:config"
set $ws9 "9:misc"

## Set Workspace by name:
bindsym $mod+p workspace $ws1
bindsym $mod+u workspace $ws2
bindsym $mod+n workspace $ws3
bindsym $mod+s workspace $ws4
bindsym $mod+i workspace $ws5
bindsym $mod+m workspace $ws6
bindsym $mod+e workspace $ws7
bindsym $mod+c workspace $ws8
bindsym $mod+o workspace $ws9

